<script>
    // Starry Background
    const canvas = document.getElementById('starCanvas');
    const ctx = canvas.getContext('2d');

    function resizeCanvas() {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        drawStars();
    }

    function drawStars() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        ctx.fillStyle = '#000';
        ctx.fillRect(0, 0, canvas.width, canvas.height);

        const numStars = 100;
        for (let i = 0; i < numStars; i++) {
            const x = Math.random() * canvas.width;
            const y = Math.random() * canvas.height;
            const radius = Math.random() * 2 + 1;

            ctx.beginPath();
            ctx.arc(x, y, radius, 0, Math.PI * 2);
            ctx.fillStyle = '#fff';
            ctx.fill();
        }
    }

    window.addEventListener('resize', resizeCanvas);
    resizeCanvas();

    // Game Logic
    let selectedLevel = 1;

    const levelBtn = document.getElementById('levelBtn');
    const startBtn = document.getElementById('startBtn');
    const settingsBtn = document.getElementById('settingsBtn');
    const loginBtn = document.getElementById('loginBtn');
    const popupOverlay = document.getElementById('popupOverlay');
    const levelOptions = document.querySelectorAll('.level-option');

    // Level button - show popup
    levelBtn.addEventListener('click', () => {
        popupOverlay.classList.add('active');
    });

    // Close popup when clicking overlay
    popupOverlay.addEventListener('click', (e) => {
        if (e.target === popupOverlay) {
            popupOverlay.classList.remove('active');
        }
    });

    // Level selection
    levelOptions.forEach(option => {
        option.addEventListener('click', () => {
            selectedLevel = parseInt(option.dataset.level);
            levelBtn.textContent = `LEVEL ${selectedLevel}`;
            popupOverlay.classList.remove('active');
        });
    });

    // Start game - Call Android interface with selected level
    startBtn.addEventListener('click', () => {
        console.log(`Starting game at level ${selectedLevel}...`);

        // Check if Android interface exists
        if (typeof Android !== 'undefined' && Android.startGame) {
            // Call the Kotlin function to start the game with level
            Android.startGame(selectedLevel);
        } else {
            // Fallback for testing in browser

            console.log('Android interface not found - testing in browser');
        }
    });

    // Settings
    settingsBtn.addEventListener('click');

    // Login
    loginBtn.addEventListener('click');

    // Prevent zoom on double tap
    let lastTap = 0;
    document.addEventListener('touchend', (e) => {
        const currentTime = new Date().getTime();
        const tapLength = currentTime - lastTap;
        if (tapLength < 500 && tapLength > 0) {
            e.preventDefault();
        }
        lastTap = currentTime;
    });
</script>
</body>
